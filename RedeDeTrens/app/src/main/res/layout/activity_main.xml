<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtDe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="De:"
            android:textSize="30dp"
            android:textColor="@android:color/background_dark"/>

        <Spinner
            android:id="@+id/spnDe"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:minWidth="340dp"
            android:minHeight="30dp" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtPara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Para:"
            android:textColor="@android:color/background_dark"
            android:textSize="30dp" />



        <Spinner
            android:id="@+id/spnPara"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minWidth="340dp"
            android:minHeight="30dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:minHeight="50dp"
        android:textColor="@android:color/background_dark"/>

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="fill_parent"
        android:layout_height="363dp"
        android:src="@drawable/mapaespanhaportugal" />
    <TextView
        android:id="@+id/txtResultados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultados"
        android:textSize="30dp"
        android:textColor="@android:color/background_dark"/>
    <TextView
        android:id="@+id/txtViewResultados"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <Button
        android:id="@+id/btnCidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+Cidades"
        android:minHeight="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        android:textColor="@android:color/background_dark"/>

        <Button
            android:id="@+id/btnCaminho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+Caminho"
            android:minHeight="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/background_dark"/>
    </LinearLayout>
</LinearLayout>